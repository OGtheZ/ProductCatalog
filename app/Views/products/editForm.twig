{% extends "app.twig" %}
{% block content %}

    <form action="/products/{{ product.getId }}/edit" method="post">
        <label for="name">Name:</label>
        <input type="text" name="name" value="{{ product.getName }}" id="name"><br>
        <label for="categoryId">Category search</label>
        <select name="categoryId" id="categoryId">
            <option disabled selected value> -- select an option -- </option>
            <option value="1">Dairy products</option>
            <option value="2">Baked products</option>
            <option value="3">Pasta/macaroni</option>
            <option value="4">Drinks</option>
            <option value="5">Meats</option>
            <option value="6">Vegetables</option>
        </select>
        <br>
        <label for="quantity">Quantity:</label>
        <input type="text" name="quantity" value="{{ product.getQuantity }}" id="quantity"><br>
        <input type="submit" value="Edit" name="edit">
    </form>
    
{% endblock %}